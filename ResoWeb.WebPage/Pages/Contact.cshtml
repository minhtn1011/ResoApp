@page "/contact"
@model ResoWeb.WebPage.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

@section style {
    <style>
        #map-frame {
            width: 100%;
            height: 70vh;
            border: none;
        }

        #main-container {
        }

        #form {
            background-color: rgba(0,0,0,0.01); 
        }
    </style>
}

<div id="banner-area">
    <img src="images/banner/banner1.jpg" alt="" />
    <div class="parallax-overlay"></div>
    <!-- Subpage title start -->
    <div class="banner-title-content">
        <div class="text-center">
            <h2>LIÊN HỆ</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item text-white" aria-current="page">Liên hệ</li>
                </ol>
            </nav>
        </div>
    </div><!-- Subpage title end -->
</div><!-- Banner area end -->
<!-- Main container start -->
<section id="main-container">
    <div class="container">
        <!-- Members -->
        <div class="row mb-5" id="members">
            <div class="col-md-6 col-sm-6">
                <div class="team team-list wow slideInLeft">
                    <div class="img-hexagon">
                        <img src="images/team/team1.jpg" alt="">
                        <span class="img-top"></span>
                        <span class="img-bottom"></span>
                    </div>
                    <div class="team-content">
                        <h3>Lâm Hữu Khánh Phương</h3>
                        <p>Giảng viên CNTT FPT</p>
                        <p class="desc">
                            15 năm kinh nghiệm làm phần mềm
                        </p>
                        <a href="#">Xem thêm</a>
                        <div class="team-social">
                            <a class="fb" href="https://www.facebook.com/phuonglhk"><i class="fa fa-facebook"></i></a>
                            <a class="twt" href="#"><i class="fa fa-twitter"></i></a>
                            <a class="linkdin" href="#"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <!--/ Team 1 end -->
            <div class="col-md-6 col-sm-6">
                <div class="team team-list wow slideInRight">
                    <div class="img-hexagon">
                        <img src="images/team/team2.jpg" alt="">
                        <span class="img-top"></span>
                        <span class="img-bottom"></span>
                    </div>
                    <div class="team-content">
                        <h3>Nguyễn Quốc Huy</h3>
                        <p>Quản Trị Marketing</p>
                        <p class="desc">
                            Xuất thân là kỹ sư CNTT
                        </p>
                        <a href="#">Xem thêm</a>
                        <div class="team-social">
                            <a class="fb" href="#"><i class="fa fa-facebook"></i></a>
                            <a class="twt" href="#"><i class="fa fa-twitter"></i></a>
                            <a class="linkdin" href="#"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <!--/ Team 2 end -->
        </div>

        <div class="gap-40"></div>
    </div>
    <div id="form">
        <div class="container pb-3 mb-5">
            <div class="row">
                <div class="col-md-7">
                    <form id="contact-form" action="#" method="post" role="form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Tên</label>
                                    <input class="form-control" name="name" id="name" placeholder="" type="text" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" name="email" id="email" placeholder="" type="email" required>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Tiêu đề</label>
                                    <input class="form-control" name="subject" id="subject" placeholder="" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Lời nhắn</label>
                            <textarea class="form-control" name="message" id="message" placeholder="" rows="10" required></textarea>
                        </div>
                        <div class="text-right">
                            <br>
                            <button class="btn btn-primary solid blank" type="submit">Send Message</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-5">
                    <div class="contact-info">
                        <h3>Công ty cổ phần RESO</h3>
                        <p><i class="fa fa-home info"></i>447 Lê Văn Việt, Tăng Nhơn Phú A, quận 9</p>
                        <p><i class="fa fa-phone info"></i> +(84) 0125295942 </p>
                        <p><i class="fa fa-envelope-o info"></i> phuong.lam@@uni-incubator.com</p>
                        <p><i class="fa fa-globe info"></i> <a href="http://reso.vn">http://reso.vn</a></p>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <!-- Map start here -->
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d951.7461124904863!2d106.79308961164519!3d10.846656137955003!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317527150b542f6f%3A0x2ea94be41c589411!2zU8OibiBCw7NuZyDEkMOhIE1pbmksIDQ0OSwgVMSDbmcgTmjGoW4gUGjDuiBBLCBRdeG6rW4gOSwgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1571220592612!5m2!1svi!2s" id="map-frame" allowfullscreen="" class="shadow"></iframe>
        <!--/ Map end here -->
    </div>
    <!--/ container end -->
</section>
<!--/ Main container end -->
