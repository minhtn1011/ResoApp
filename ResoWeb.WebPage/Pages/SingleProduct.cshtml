@page "/products/{id}"
@model ResoWeb.WebPage.Pages.SingleProductModel
@section style {
    <style>
        html {
            scroll-behavior: smooth;
        }

        .feature-icon {
            background-color: unset !important;
            width: 85px !important;
            height: 85px !important;
            border-radius: unset !important;
            margin-right: 20px;
            font-size: 65px;
        }
        .document-card{
            font-size:130%;
        }
    </style>
}

@section script {
    <script>
        $('.document-card').hover(
            hoverEvent => {
                hoverEvent.currentTarget.classList.add('shadow');
            },
            releaseEvent => {
                releaseEvent.currentTarget.classList.remove('shadow');
            }
        )

    </script>
}
<div id="banner-area">
    <img src="/images/banner/banner1.jpg" alt="" />
    <div class="parallax-overlay"></div>
    <!-- Subpage title start -->
    <div class="banner-title-content">
        <div class="text-center">
            <h2>@Model.Product.Name</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item text-white" aria-current="page">Sản Phẩm</li>
                </ol>
            </nav>
        </div>
    </div><!-- Subpage title end -->
</div><!-- Banner area end -->
<!-- Main container start -->
<section id="main-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                @*<h2 class="text-center" id="service-name">
                        @Model.Product.Name
                    </h2>*@
                <div class="post-content">
                    <div class="post-image-wrapper">
                        <img src="@Model.Product.Image" class="img-fluid" alt="" id="service-image" />
                    </div><!-- post image end -->
                    <p id="service-descrip">
                        @Model.Product.Description
                    </p>

                    <div class="gap-20"></div>


                </div>
                <!--/ post content end -->
            </div>
            <!--/ Content col end -->

            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
                <br />
                <div class="sidebar sidebar-right">
                    <!-- category start -->
                    <div class="row">
                        @foreach (var c in Model.Product.Characteristics)
                        {
                            <div class="feature-box col-sm-12 wow fadeInDown" data-wow-delay=".5s">
                                <img src="@c.Image" class="feature-icon float-left">
                                <div class="feature-content">
                                    <h3>@c.Title</h3>
                                    <p>@c.Detail</p>
                                </div>
                            </div>
                            <!--/ End first featurebox -->
                        }

                    </div>

                    <div class="gap-20"></div>

                </div>
                <!--/ Sidebar end -->
            </div>
            <!--/ Sidebar col end -->
        </div>
        <!--/ row end -->
    </div>
    <!--/ container end -->
</section>
<!--/ Main container end -->
@{var left = true;}
@foreach (var f in Model.Product.Features)
{

    <!-- Features start -->
    <section id="image-block" class="image-block p-0 ">
        <div class="container-fluid">
            <div class="row">
                @if (!left)
                {
                    <div class="col-md-6 ts-padding"
                         style="background:url('@f.Image') 50% 50% / cover no-repeat;">
                    </div>
                }
                <div class="col-md-6 ts-padding img-block-left">
                    <div class="img-block-head text-center">
                        <h3>@f.Title</h3>
                        <h2>@f.SmallText</h2>
                        <p>
                            @f.Description
                        </p>
                    </div>

                    <div class="gap-30"></div>
                    @foreach (var fD in f.FeatureDetails)
                    {
                        <div class="image-block-content">
                            <img src="@fD.Image" class="feature-icon float-left">
                            <div class="feature-content">
                                <h3>@fD.Title</h3>
                                <p>
                                    @fD.Detail
                                </p>
                            </div>
                        </div>
                    }

                </div>
                @if (left)
                {
                    <div class="col-md-6 ts-padding"
                         style="background:url('@f.Image') 50% 50% / cover no-repeat;">
                    </div>
                }
                @{left = !left;}
            </div>
        </div>
    </section>
    <!-- Features end -->
}

